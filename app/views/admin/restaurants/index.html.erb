<div class="container">

  <h1>餐廳後台</h1>

  <div class="row">

    <div class="col-md-12">

      <div>
        <%= link_to 'New Restaurant', new_admin_restaurant_path, class: "btn btn-primary" %>
      </div>
      <br>
      <table class="table table-striped table-bordered">
         <thead style="background:gray">
          <tr>
            <th>ID#</th>
            <th>Name</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant|%>
        <tr> 
          <td class="col-xs-1 col-sm-1 col-md-2 col-lg-2">
            <%= restaurant.id%>
          </td>
          <td class="col-xs-1 col-sm-1 col-md-4 col-lg-7">
            <%= restaurant.name%>
          </td>
          <td class="col-xs-6 col-sm-1 col-md-2 col-lg-1">
            <%= link_to '', admin_restaurant_path(restaurant), class: "glyphicon glyphicon-eye-open" %>
          </td>
          <td class="col-xs-1 col-sm-1 col-md-2 col-lg-1">
            <%= link_to '', edit_admin_restaurant_path(restaurant), class: "glyphicon glyphicon-pencil" %>
          </td>
          <td class="col-xs-1 col-sm-1 col-md-2 col-lg-1">
            <%= link_to '', admin_restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure?"}, class: "glyphicon glyphicon-trash" %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table> 

      <div class="text-center">
        <%= paginate @restaurants %>    
      </div>

    </div>

  </div>

</div>