<div class="container">
  <div class="row">

    <% if @restaurant.errors.any? %>
      <h4>We have some errors here!</h4>
      <ul>
        <% @restaurant.errors.full_messages.each do |msg|%>
          <li><%= msg%></li>
        <% end %>
      </ul>
      <hr>
    <% end %>

    <%= form_for [:admin, @restaurant] do |f| %>
  
      <div class="form-group">
        <%= f.label :name, "Name:" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :tel, "Telephone:" %>
        <%= f.text_field :tel, class: "form-control" %>
      </div>


      <div class="form-group">
        <%= f.label :address, "Address:" %>    
        <%= f.text_field :address, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :opening_hours, "Opening Hours:" %>
        <%= f.text_field :opening_hours, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description, "Description:" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :image, "Photo:" %>
        <br>
        <%= image_tag @restaurant.image, width: '300px' if @restaurant.image? %>
        <%= f.file_field :image %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-success" %>
      </div>
    <%end%>

    <div class="clearfix">
      <hr>
      <%= link_to 'Back to index', admin_restaurants_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>