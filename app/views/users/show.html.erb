<div class="container">
  <div class="row">
    <div class="col-md-7 col-md-offset-2">

      <div class="page-header">

        <div class="col-md-6 col-sm-4">
          <div class="text-center thumbnail">
            <img src="http://via.placeholder.com/400x400" class="img-responsive img-rounded">
          </div>
        </div>
      
        <div class="col-md-6 col-sm-4">
          <h2><%= @user.name %></h2>
          <p><%= @user.email %></p>
          <div><%= simple_format @user.intro %></div>
        </div>
        <div class="clearfix"></div>
      </div>
                      
        <div class="col-md-9 col-sm-8">
          <%= link_to 'Back to index', restaurants_path, class: "btn btn-primary" %>
          <% if @user.email == current_user.email %>
            <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-success" %>
          <% end %>
        </div>

      </div>

  </div>
</div>