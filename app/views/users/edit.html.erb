<div class="container">
  <div class="row">

    <div class="col-md-6 col-md-offset-3">

      <h3>Edit Profile</h3>

      <%= form_for @user do |f| %>

        <div class="form-group">
          <%= f.label :name, "暱稱" %>
          <%= f.text_field :name, placeholder: "希望大家怎麼叫你呢！", class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :intro, "介紹自己！"%>
          <%= f.text_area :intro, placeholder: "為了讓大家更認識你，介紹一下自己吧！", class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :avatar, "大頭照上傳" %>
          <p><%= image_tag @user.avatar if @user.avatar? %></p>
          <%= f.file_field :avatar %>
        </div>
        <hr>

        <div class="form-group">
          <%= link_to 'Go Back', url_for(request.env["HTTP_REFERER"] || root_path), class: "btn btn-primary" %>
          <%= f.submit "Update", class: "btn btn-success"%>
          <%= link_to "Cancel", user_path(@user), class: "btn btn-default" %>
        </div>

      <% end %>
    </div>
  </div>
</div>